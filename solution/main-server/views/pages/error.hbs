<!-- Contenuto principale dell'errore -->
<div class="container">
  <div class="text-center py-5">
    
    <!-- Icona di errore basata sul tipo di status -->
    <div class="mb-4">
      <i class="bi bi-exclamation-circle-fill text-warning" style="font-size: 6rem;"></i>
    </div>
    
    <!-- Codice di errore -->
    <h1 class="display-1 fw-bold text-cinema-gold mb-3">{{status}}</h1>
    
    <!-- Titolo dell'errore -->
    <h2 class="h2 fw-bold mb-3" style="color: var(--text-primary)">
      {{#if title}}
        {{title}}
      {{else}}
        Oops! Something went wrong
      {{/if}}
    </h2>
    
    <!-- Messaggio di errore -->
    <p class="lead mb-4" style="color: var(--text-secondary); max-width: 600px; margin: 0 auto;">
      {{#if message}}
        {{message}}
      {{else}}
        An unexpected error occurred while processing your request. 
        Please try again or contact support if the problem persists.
      {{/if}}
    </p>
    
    <!-- Azioni principali -->
    <div class="d-flex justify-content-center gap-3 mb-4 flex-wrap">
      <a href="/" class="btn btn-cinema-gold btn-lg hover-lift" style="background-color: var(--cinema-gold); border-color: var(--cinema-gold); color: white; font-weight: 600;">
        <i class="bi bi-house me-2"></i>Go Home
      </a>
      <button onclick="history.back()" class="btn btn-outline-primary btn-lg hover-lift" style="border-color: var(--primary-color); color: var(--primary-color);">
        <i class="bi bi-arrow-left me-2"></i>Go Back
      </button>
    </div>
    
    <!-- Suggerimenti -->
    <div class="mt-4">
      <p style="color: var(--text-muted);" class="mb-3">You can also try:</p>
      <div class="d-flex justify-content-center gap-2 flex-wrap">
        <a href="/api/movies/search" class="btn btn-sm btn-outline-secondary hover-lift" style="border-color: var(--secondary-color); color: var(--secondary-color);">
          <i class="bi bi-search me-1"></i>Browse Movies
        </a>
        <a href="/chat" class="btn btn-sm btn-outline-secondary hover-lift" style="border-color: var(--secondary-color); color: var(--secondary-color);">
          <i class="bi bi-people me-1"></i>Browse Actors
        </a>
        <a href="/awards" class="btn btn-sm btn-outline-secondary hover-lift" style="border-color: var(--secondary-color); color: var(--secondary-color);">
          <i class="bi bi-trophy me-1"></i>Browse Awards
        </a>
        <button onclick="location.reload()" class="btn btn-sm btn-outline-secondary hover-lift" style="border-color: var(--secondary-color); color: var(--secondary-color);">
          <i class="bi bi-arrow-clockwise me-1"></i>Refresh Page
        </button>
      </div>
    </div>
    
    <!-- Dettagli tecnici (solo in development) -->
    {{#if isDevelopment}}
      {{#if stack}}
        <div class="mt-5 text-start" style="max-width: 800px; margin-left: auto; margin-right: auto;">
          <div style="background: var(--bg-primary); border: 1px solid var(--border-color); border-radius: var(--border-radius); padding: 1.5rem;">
            <h5 class="mb-3" style="color: var(--danger-color);">
              <i class="bi bi-bug me-2"></i>Technical Details (Development Mode)
            </h5>
            <div style="background: var(--bg-tertiary); border-radius: var(--border-radius); padding: 1rem; font-family: 'Courier New', monospace; font-size: 0.85rem; color: var(--text-secondary); white-space: pre-wrap; overflow-x: auto; max-height: 200px; overflow-y: auto;">{{stack}}</div>
          </div>
        </div>
      {{/if}}
    {{/if}}
    
  </div>
</div>

<!-- CSS aggiuntivo per gli stili dei bottoni con palette corretta -->
<style>
  /* Bottone Cinema Gold personalizzato */
  .btn-cinema-gold {
    background-color: var(--cinema-gold);
    border-color: var(--cinema-gold);
    color: white;
    font-weight: 600;
  }
  
  .btn-cinema-gold:hover {
    background-color: #b8941f; /* Versione leggermente pi√π scura del cinema-gold */
    border-color: #b8941f;
    color: white;
    transform: translateY(-2px);
  }
  
  .btn-cinema-gold:focus {
    box-shadow: 0 0 0 0.2rem rgba(212, 175, 55, 0.25);
  }
  
  /* Override per i bottoni outline che usano le variabili CSS */
  .btn-outline-primary:hover {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
    color: white;
  }
  
  .btn-outline-secondary:hover {
    background-color: var(--secondary-color);
    border-color: var(--secondary-color);
    color: white;
  }
  
  /* Assicura che il warning icon usi il colore corretto */
  .text-warning {
    color: var(--warning-color) !important;
  }
  
  /* Migliora il contrasto dei testi in dark mode */
  [data-theme="dark"] .lead,
  @media (prefers-color-scheme: dark) {
    .lead {
      color: var(--text-secondary) !important;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    console.log('üé¨ Error page loaded');
    
    // Log dell'errore senza usare template variables
    console.error('Error Page loaded at:', new Date().toISOString());
    
    // Notifica solo se c'√® il sistema di notifiche
    if (window.cinemaHub) {
      setTimeout(() => {
        window.cinemaHub.showNotification(
          'Page not found - redirecting options available', 
          'info'
        );
      }, 1000);
    }
  });
</script>