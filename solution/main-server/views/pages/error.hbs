<!-- Contenuto principale dell'errore -->
<div class="container">
  <div class="text-center py-5">
    
    <!-- Icona di errore basata sul tipo di status -->
    <div class="mb-4">
      <i class="bi bi-exclamation-circle-fill text-warning" style="font-size: 6rem;"></i>
    </div>
    
    <!-- Codice di errore -->
    <h1 class="display-1 fw-bold text-cinema-gold mb-3">{{status}}</h1>
    
    <!-- Titolo dell'errore -->
    <h2 class="h2 fw-bold mb-3 text-primary">
      {{#if title}}
        {{title}}
      {{else}}
        Oops! Something went wrong
      {{/if}}
    </h2>
    
    <!-- Messaggio di errore -->
    <p class="lead mb-4 text-secondary mx-auto" style="max-width: 600px;">
      {{#if message}}
        {{message}}
      {{else}}
        An unexpected error occurred while processing your request. 
        Please try again or contact support if the problem persists.
      {{/if}}
    </p>
    
    <!-- Azioni principali -->
    <div class="d-flex justify-content-center gap-3 mb-4 flex-wrap">
      <a href="/" class="btn btn-cinema-gold btn-lg hover-lift">
        <i class="bi bi-house me-2"></i>Go Home
      </a>
      <button onclick="history.back()" class="btn btn-outline-primary btn-lg hover-lift">
        <i class="bi bi-arrow-left me-2"></i>Go Back
      </button>
    </div>
    
    <!-- Suggerimenti -->
    <div class="mt-4">
      <p class="text-muted mb-3">You can also try:</p>
      <div class="d-flex justify-content-center gap-2 flex-wrap">
        <a href="/movies" class="btn btn-sm btn-outline-secondary hover-lift">
          <i class="bi bi-search me-1"></i>Movies Catalog
        </a>
        <a href="chat" class="btn btn-sm btn-outline-secondary hover-lift">
          <i class="bi bi-chat-dots me-1"></i>Live Chat
        </a>
        <a href="/api-docs" class="btn btn-sm btn-outline-secondary hover-lift">
          <i class="bi bi-book me-1"></i>API Docs
        </a>
        <button onclick="location.reload()" class="btn btn-sm btn-outline-secondary hover-lift">
          <i class="bi bi-arrow-clockwise me-1"></i>Refresh Page
        </button>
      </div>
    </div>
    
    <!-- Dettagli tecnici (solo in development) -->
    {{#if isDevelopment}}
      {{#if stack}}
        <div class="mt-5 text-start mx-auto" style="max-width: 800px;">
          <div class="bg-dark border rounded p-4">
            <h5 class="mb-3 text-danger">
              <i class="bi bi-bug me-2"></i>Technical Details (Development Mode)
            </h5>
            <div class="bg-secondary rounded p-3 font-monospace small text-light overflow-auto" style="max-height: 200px; white-space: pre-wrap;">{{stack}}</div>
          </div>
        </div>
      {{/if}}
    {{/if}}
    
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    console.log('ðŸŽ¬ Error page loaded');
    
    console.error('Error Page loaded at:', new Date().toISOString());

    if (window.cinemaHub) {
      setTimeout(() => {
        window.cinemaHub.showNotification(
          'Page not found - redirecting options available', 
          'info'
        );
      }, 1000);
    }
  });
</script>