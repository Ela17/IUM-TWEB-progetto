<nav class="navbar navbar-expand-lg navbar-dark fixed-top">
    <div class="container">
        <!-- Logo -->
        <a class="navbar-brand d-flex align-items-center" href="/">
            <i class="bi bi-camera-reels me-2 fs-4"></i>
            <span class="fw-bold">CinemaHub</span>
        </a>

        <!-- Mobile toggle button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navigation Links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <!-- Left navigation -->
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link {{#if isHome}}active{{/if}}" href="/">
                        <i class="bi bi-house me-1"></i>Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{#if isMovies}}active{{/if}}" href="/movies">
                        <i class="bi bi-search me-1"></i>Movies
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{#if isActors}}active{{/if}}" href="/actors">
                        <i class="bi bi-people me-1"></i>Actors
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{#if isAwards}}active{{/if}}" href="/awards">
                        <i class="bi bi-trophy me-1"></i>Awards
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{#if isChat}}active{{/if}}" href="/chat">
                        <i class="bi bi-chat-dots me-1"></i>Live Chat
                    </a>
                </li>
            </ul>

            <!-- Right side: Search + Theme Toggle + User -->
            <div class="d-flex align-items-center gap-3">
                <!-- Quick Search -->
                <div id="quick-search" class="position-relative">
                    {{> search-bar}}
                    <!-- Search Results Container -->
                    <div id="search-results" class="search-results d-none">
                        <div class="search-results-content">
                            <!-- Results will be populated here by JavaScript -->
                        </div>
                    </div>
                </div>

                <!-- Theme Toggle Button -->
                <button 
                    id="theme-toggle" 
                    class="theme-toggle btn" 
                    type="button"
                    aria-label="Toggle theme"
                    title="Switch theme"
                >
                    <span class="theme-toggle-icon">
                        <i class="bi bi-sun-fill theme-icon-sun"></i>
                        <i class="bi bi-moon-fill theme-icon-moon"></i>
                    </span>
                    <span class="d-none d-sm-inline ms-1" id="theme-text">Theme</span>
                </button>

                <!-- Chat Status Indicator -->
                <div id="chat-indicator" class="text-light">
                    <i class="bi bi-circle-fill text-success"></i>
                    <small>Online</small>
                </div>

                <!-- User Menu (opzionale) -->
                {{#if user}}
                <div class="dropdown">
                    <button class="btn btn-outline-light dropdown-toggle btn-sm" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle"></i>
                        <span class="d-none d-sm-inline ms-1">{{user.name}}</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/profile">Profile</a></li>
                        <li><a class="dropdown-item" href="/favorites">My Favorites</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/logout">Logout</a></li>
                    </ul>
                </div>
                {{else}}
                <div class="d-flex gap-2">
                    <a href="/login" class="btn btn-outline-light btn-sm">
                        <i class="bi bi-box-arrow-in-right me-1"></i>Login
                    </a>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</nav>