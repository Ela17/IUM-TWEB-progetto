#!/usr/bin/env node

/**
 * Module dependencies.
 */
require("dotenv").config();

var app = require("../app");
var debug = require("debug")("main-server:server");
var http = require("http");

const createSocketServer = require("../socket/serverSocketSetup");

/**
 * Get port from environment and store in Express.
 */
var port = normalizePort(process.env.PORT || "3000");
app.set("port", port);

/**
 * Create HTTP server.
 */
var server = http.createServer(app);

/**
 * Setup Socket.IO sul server HTTP
 */
const io = createSocketServer(server);

/**
 * Listen on provided port, on all network interfaces.
 */
server.listen(port);
server.on("error", onError);
server.on("listening", onListening);

/**
 * Graceful shutdown
 */
let isShuttingDown = false;
let socketClosed = false;
let serverClosed = false;
let forceShutdownTimeout = null;

/**
   * @function checkAndExit
   * @description Controlla se entrambi Socket.io e HTTP server sono chiusi per uscire
   */
function checkAndExit() {
  if (socketClosed && serverClosed) {
    clearTimeout(forceShutdownTimeout);
    console.log('‚úÖ Graceful shutdown completato.');
    process.exit(0);
  }
}

/**
 * @function gracefulShutdown
 * @description Gestisce la chiusura ordinata del server
 * @param {string} signal - Il segnale ricevuto (SIGINT o SIGTERM)
 */
function gracefulShutdown(signal) {
  if (isShuttingDown) {
    console.log('üîÑ Shutdown gi√† in corso...');
    return;
  }

  isShuttingDown = true;
  console.log(`\nüõë Ricevuto segnale ${signal}. Avvio graceful shutdown...`);
  
  forceShutdownTimeout = setTimeout(() => {
    console.error('‚ö†Ô∏è Timeout raggiunto. Forzo la chiusura del processo.');
    process.exit(1);
  }, 30000); // 30 secondi di timeout

  // Prima chiude Socket.io
  if (io) {
    console.log('üîå Chiusura connessioni Socket.io...');
    io.close((err) => {
      if (err) {
        console.error('‚ùå Errore durante la chiusura di Socket.io:', err.message);
      } else {
        console.log('‚úÖ Socket.io chiuso correttamente');
      }
      socketClosed = true;
      checkAndExit();
    });
  } else {
    socketClosed = true;
    checkAndExit();
  }

  // Poi chiude server http
  console.log('üåê Chiusura server HTTP...');
  server.close((err) => {
    if (err) {
      console.error('‚ùå Errore durante la chiusura del server HTTP:', err.message);
    } else {
      console.log('‚úÖ Server HTTP chiuso correttamente');
    }
    serverClosed = true;
    checkAndExit();
  });

  server.unref();
}

// Gestori per i segnali di terminazione
process.on('SIGINT', () => gracefulShutdown('SIGINT'));
process.on('SIGTERM', () => gracefulShutdown('SIGTERM'));

// Gestisce gli errori non catturati per evitare crash inaspettati
process.on('uncaughtException', (err) => {
  console.error('üí• Uncaught Exception:', err);
  gracefulShutdown('UNCAUGHT_EXCEPTION');
});

process.on('unhandledRejection', (reason, promise) => {
  console.error('üí• Unhandled Rejection at:', promise, 'reason:', reason);
  gracefulShutdown('UNHANDLED_REJECTION');
});

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */
function onError(error) {
  if (error.syscall !== "listen") {
    throw error;
  }

  var bind = typeof port === "string" ? "Pipe " + port : "Port " + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case "EACCES":
      console.error(bind + " requires elevated privileges");
      process.exit(1);
      break;
    case "EADDRINUSE":
      console.error(bind + " is already in use");
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */
function onListening() {
  var addr = server.address();
  var bind = typeof addr === "string" ? "pipe " + addr : "port " + addr.port;
  debug("Listening on " + bind);
  console.log(`üìö API Documentation: http://localhost:${addr.port}/api-docs`);
  console.log('üõ†Ô∏è Premi Ctrl+C per graceful shutdown');
}
